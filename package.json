{
  "name": "react-init",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx babel --plugins @babel/plugin-transform-react-jsx src/index.js -d build",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": ["src"],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": false
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "npm-watch": "^0.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8"
  }
}
